<% @planes = Plane.all%>
<% plane = @planes.sample%>
<div class = "home-card">

   <% if plane.photos.attached?%>
  <div class = "home-card-img" style ="background-image:
    url('<%= cl_image_path plane.photos[0].key%>')">
  <% else%>
    <div class= "home-card-img" style = "background-image: url('https://www.arachnys.com/wp-content/uploads/2022/02/iStock-466619660.jpg');">
  <%end%>
  <%= link_to "", plane_path(plane), class: "home-card-link"%>
  </div>
  <div class = "home-card-text">

    <p class = "home-card-text-specific"><i class="fa-solid fa-plane"></i> <%=plane.model%></p>
    <div>
    <% if plane.price_per_hour < 1000 %>
      <i class="fa-solid fa-sack-dollar"></i>
      <% elsif plane.price_per_hour > 1000 && plane.price_per_hour < 3000 %>
      <i class="fa-solid fa-sack-dollar"></i><i class="fa-solid fa-sack-dollar"></i>
      <% else %>
      <i class="fa-solid fa-sack-dollar"></i><i class="fa-solid fa-sack-dollar"></i><i class="fa-solid fa-sack-dollar"></i>
      <% end %>
    </div>
    <p class = "home-card-text-specific"><i class="fa-solid fa-chair"></i> <%=plane.seats%></p>
  </div>
</div>
