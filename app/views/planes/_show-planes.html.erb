<div class = "show-card">
  <div class = "show-card-img">
  
  <% if plane.photos.attached?%>
    <%= cl_image_tag plane.photos[0].key, class: "show-card-img"%>
    
  <% else%>
    <%= image_tag "https://www.arachnys.com/wp-content/uploads/2022/02/iStock-466619660.jpg", class: "show-card-img"%>
  <%end%>
  <span><%= link_to plane.name,plane_path(plane), class: "plane-name-on-card" %></span>
  </div>

  <div class = "show-card-text">
    <div>
      <p>Model: <%=plane.model%></p>
      <p>Address: <%=plane.address%></p>
    </div>
    <div>
      <p>Price: <%=plane.price_per_hour%></p>
      <p>Owner: <%=plane.user.first_name%></p>
    </div>
  </div>
</div>